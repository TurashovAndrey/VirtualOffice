<!DOCTYPE html>
<html>
<head>
  <%= stylesheet_link_tag "../assets/stylesheets/jquery-ui-1.8.custom" %>
  <style type="text/css">
    /* css for timepicker */
    #ui-timepicker-div dl{ text-align: left; }
    #ui-timepicker-div dl dt{ height: 25px; }
    #ui-timepicker-div dl dd{ margin: -25px 0 10px 65px; }
  </style>

  <%= javascript_include_tag "../../assets/javascripts/jquery.ui.datepicker.js", "../../assets/javascripts/jquery-ui-timepicker-addon.js" %>
  <%= render :partial => 'layouts/html_head' %>
  <%= raw(Helper.get_chat_script(nil)) %>
</head>
<body>
<div id="all">
  <div id="header">
    <%= render :partial => 'layouts/header' %>
    <%= render :partial => "layouts/navigation" %>
    <%= render :partial => 'layouts/sub_navigation' %>
  </div>
  <div id="content">
    <%= render :partial => 'layouts/flash' %>
    <h1><%= display_headline %></h1>
    <%= netzke_init %>
    <%= javascript_include_tag "../../../public/extjs/locale/ext-lang-ru.js" %>
    <%= yield %>
  </div>
  <div id="empty"></div>
  <div id="footer">
    <%= render :partial => 'layouts/footer' %>
  </div>
</div>
<%= link_to('Logout', logout_path, :method => :delete) if logged_in? %>
</body>
</html>
