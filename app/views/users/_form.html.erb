<%= semantic_form_for(@user, :url => account_path(@user)) do |f| %>
    <%= f.semantic_errors :email, :password, :company_name %>

    <%= f.inputs do %>
        <%= f.input :email, :required => false, :label => false, :hint=>true%>
        <%= f.input :password, :required => false, :label => false %>
        <%= f.input :company_name, :required => false, :label => '.timtim.ru' %>
    <% end %>

    <%= f.buttons do %>
        <%= f.commit_button :label => t('user.buttons.register'), :button_html => { :class => 'button-styled blue'} %>
    <% end %>

<% end %>
