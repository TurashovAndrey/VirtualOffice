# coding: utf-8

<div class="span6 well">
  <%= render "folder_list", :company_folders => @company_folders %>
</div>

<div class="span12 well">
  <%= semantic_form_for(@folder) do |f| %>
      <%= f.inputs do %>
          <%= f.input :folder_name, :label=>"Название", :as => :text, :input_html => { :class => 'autogrow', :rows => 4, :maxlength => 100 }%>
      <% end %>
      <%= button_to 'Сохранить', folders_path(@folder), :class => 'btn btn-primary' %>
  <% end %>
</div>