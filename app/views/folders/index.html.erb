<div id="box-styled-grey">
    <div id="box-styled-lightgrey" style="width:95%">
      <p><%= link_to "Новая папка", new_folder_path %></p>
    </div>

    <div id="box-styled-lightgrey" style="width:95%">
      <h1><%= link_to "Папки компании", folders_path %></h1>
      <% if !@folders.nil? %>
         <% @folders.each do |folder| %>
            <p><%= link_to folder.folder_name, folder_path(folder) %>
               <%= link_to image_tag("/system/icons/Edit.gif"), edit_folder_path(folder) %>
               <%= link_to image_tag("/system/icons/Delete.gif"), folder_path(folder), :confirm => 'Вы уверены?', :method => :delete %>
            </p>
         <% end %>
      <% end %>
    </div>

    <div id="box-styled-lightgrey" style="width:95%">
      <h1><%= link_to "Мои папки", folders_path %></h1>
      <% if !@my_folders.nil? %>
         <% @my_folders.each do |folder| %>
            <p><%= link_to folder.folder_name, folder_path(folder) %>
               <%= link_to image_tag("/system/icons/Edit.gif"), edit_folder_path(folder) %>
               <%= link_to image_tag("/system/icons/Delete.gif"), folder_path(folder), :confirm => 'Вы уверены?', :method => :delete %>
            </p>
         <% end %>
      <% end %>
    </div>

    <div id="box-styled-lightgrey" style="width:95%">
        <%= semantic_form_for(@attachment) do |f| %>

          <h1>Прикрепить файл</h1><br/>
          <%= f.inputs do %>
             <%= f.file_field :attach %>
          <% end %>

          <br/>
          <div style="position:relative; text-align:center">
            <%= button_to 'Сохранить', @attachment, :method => :create, :class => 'button-styled grey' %>
          </div>
        <% end %>
        <br/>
    </div>
</div>

<div id="box-styled-grey" style="width: 70%">
  <% if !@folders.nil? %>
     <% @folders.each do |folder| %>
          <div id="box-styled-lightgrey" style="width:98%">
          <h1><%= link_to folder.folder_name, folder_path(folder) %></h1>
          <% if !folder.attachments.empty? %>
             <% folder.attachments.each do |attachment| %>
                <div id="box-styled-grey-attachment">
                   <%= image_tag AttachmentHelper.get_icon_path(attachment.attach) %> <br/>
                   <%= link_to attachment.attach_file_name, attachment.attach.url(:original, false) %>
                   <%= unless attachment.id.nil?
                      link_to 'Удалить', attachment_path(attachment), :confirm => 'Вы уверены?', :method => :delete
                   end%><br/>
                   <p id="time_field"><%= Helper.distance_of_time_in_words(DateTime.now.utc,attachment.created_at) %></p>
                </div>
             <% end %>
          <% end %>
          </div>
     <% end %>
  <% end %>


  <% if !@attachments.empty? %>
     <div id="box-styled-lightgrey" style="width:98%">
     <h1><%= link_to "Файлы", folders_path %></h1>
     <% @attachments.each do |attachment| %>
        <div id="box-styled-grey-attachment">
           <%= image_tag AttachmentHelper.get_icon_path(attachment.attach)%> <br/>
           <%= link_to attachment.attach_file_name, attachment.attach.url(:original, false) %>
           <%= unless attachment.id.nil?
               link_to 'Удалить', attachment_path(attachment), :confirm => 'Вы уверены?', :method => :delete
           end%><br/>
           <p id="time_field"><%= Helper.distance_of_time_in_words(DateTime.now.utc,attachment.created_at) %></p>
        </div>
     <% end %>
     </div>
  <% end %>
</div>
    <%= raw(Helper.get_chat_script(current_user)) %>
