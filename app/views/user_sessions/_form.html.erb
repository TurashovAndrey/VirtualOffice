<%= semantic_form_for(@user_session, :url => user_session_path) do |f| %>
    <%= f.semantic_errors :email, :password %>

    <%= f.inputs do %>
        <%= f.input :email, :required => false, :label => false %>
        <%= f.input :password, :required => false, :label => false %>
    <% end %>

    <%= f.buttons do %>
        <%= f.commit_button :label => t('user.buttons.login'), :button_html => { :class => 'button-styled blue'} %>
    <% end %>

<% end %>
