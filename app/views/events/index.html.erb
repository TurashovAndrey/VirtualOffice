# coding: utf-8
<!-- Probably move the stylesheet to you layout. Also make sure you include the javascript. -->
<%= stylesheet_link_tag "event_calendar"%>


<%= semantic_form_for(@event) do |f| %>
    <br/>
    <%= f.inputs do %>
        <%= f.input :name, :as => :string, :label => "Событие", :required => true %>
        <%= f.input :start_at, :as => :string, :type => :datetime,  :label => "Дата начала", :required => true %>
        <%= f.input :end_at, :as => :string, :type => :datetime, :label => "Дата конца", :required => true %>
        <%= f.input :description, :label => "Описание", :input_html => { :rows => 10, :cols => 20, :maxlength => 10 } %>
    <% end %>

    <%= f.buttons do %>
       <%= button_to 'Сохранить', @event, :method => :update, :class => 'button-styled blue' %>
    <%= unless @event.id.nil?
        button_to 'Удалить', event_path(@event), :confirm => 'Are you sure?', :method => :delete, :class => 'button-styled blue'
       end
    %>
    <% end %>

    <br/>
    <%= raw(event_calendar) %>
    <%= raw(Helper.get_chat_script(current_user)) %>
<% end %>