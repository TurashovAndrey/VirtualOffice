# coding: utf-8
<!-- Probably move the stylesheet to you layout. Also make sure you include the javascript. -->
<%= stylesheet_link_tag "event_calendar"%>

<%= semantic_form_for(@event) do |f| %>
    <%= f.inputs do %>
        <%= f.input :name, :as => :string, :label => "Событи", :required => true %>
        <%= f.input :start_at, :as => :string, :type => :date,  :label => "Дата начала", :required => true %>
        <%= f.input :end_at, :as => :string, :label => "Дата конца", :required => true %>
        <%= f.input :start_time, :as => :string, :label => "Время начала"%>
        <%= f.input :end_time, :as => :string, :input_html => { :type => :time }, :label => "Время конца"%>
    <% end %>

    <%= f.buttons  %>

    <%= unless @event.id.nil?
        link_to 'Destroy', event_path(@event), :confirm => 'Are you sure?', :method => :delete
       end
    %>

    <br/>
    <%= raw(event_calendar) %>
    <%= raw(Helper.get_chat_script(current_user)) %>
<% end %>