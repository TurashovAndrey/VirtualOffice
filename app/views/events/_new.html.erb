<%= semantic_form_for(@event) do |f| %>
    <div id="NewEventModal" class="modal hide fade form-horizontal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
        <h3>Новое событие</h3>
      </div>

      <div class="modal-body well">
        <%= f.inputs do %>
          <%= f.input :name, :as => :string, :label => "Событие", :required => true %>
          <%= f.input :start_at, :as => :string, :type => :datetime,  :label => "Дата начала", :required => true %>
          <%= f.input :end_at, :as => :string, :type => :datetime, :label => "Дата конца", :required => true %>
          <%= f.input :description, :as => :string, :label => "Описание", :input_html => { :rows => 10, :cols => 20, :maxlength => 10 } %>

          <%= f.input :color, :label => "Важность",  :as => :select, :collection => options_for_select([["Низкая","#FF0000", {:style => "background-color:Red; color: #FFFFFF;"}],
                        ["Средняя","#EBE81D", {:style => "background-color: Yellow; color: #FFFFFF;"}],
                        ["Высокая","#00FF00", {:style => "background-color: Green; color: #FFFFFF;"}]]) %>
          <%= f.input :calendar_id, :as => :hidden %>
        <% end %>
        <%= button_to 'Сохранить', events_path(@event), :class => 'btn btn-primary' %>
      </div>
    </div>
<% end %>