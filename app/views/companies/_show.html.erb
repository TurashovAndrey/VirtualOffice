<%= semantic_form_for(@company) do |f| %>
    <br/>
    <table class="profile_table">
      <tr>
        <td>
            <%= image_tag @company.logo.url, :width => 200, :height => 200 %> <br/>
            <%= f.file_field :logo %>
        </td>
        <td>
	    <%= f.inputs do %>
	        <%= f.input :name, :as => :string, :label => "Название компании" %>
        	<%= f.input :url_base, :as => :string, :label => "Адрес в системе", :input_html => { :readonly => true } %>
	    <% end %>
        </td>
     </tr>
     <tr>
       <td>
         <%= f.buttons do %>
             <%= f.commit_button "Сохранить" %>
         <% end %>
       </td>
     </tr>
   </table>

    <%= raw(Helper.get_chat_script(current_user)) %>
<% end %>
