<% if !@groups.nil? %>
   <% @groups.each do |group| %>
        <p>
           <%= link_to image_tag("/system/icons/Group.png", :width=>"16px", :height=>"16px"), new_room_path(:id => @room.id,:group_id => group.id, :add_group => true), :remote => true %>
           <%= link_to group.group_name, new_room_path(:id => @room.id,:group_id => group.id, :add_group => true), :remote => true, :remote => true %>
           <%= link_to image_tag("/system/icons/Plus.png", :height => 16, :width => 16), new_room_path(:id => @room.id,:group_id => group.id, :add_group => true), :remote => true %>
        </p>


        <% if !group.users.empty? %>
           <% group.users.each do |user| %>
              <div style="padding-left:10px">
                 <p>
                    <%= link_to image_tag(user.avatar.url, :width=>"16px", :height=>"16px"), new_room_path(:id => @room.id, :user_id => user, :add_user => true), :remote => true %>
                    <%= link_to user.email, new_room_path(:id => @room.id, :user_id => user, :add_user => true), :remote => true %>
                    <%= link_to image_tag("/system/icons/Plus.png", :height => 16, :width => 16), new_room_path(:id => @room.id, :user_id => user.id, :add_user => true), :remote => true %>
                </p>
              </div>
           <% end %>
        <% end %>

        <% if !Group.where(:parent_id => group.id).empty? %>
           <% Group.where(:parent_id => group.id).each do |child_group_first| %>
              <div style="padding-left:10px">
                 <p>
                    <%= link_to image_tag("/system/icons/Group.png", :width=>"16px", :height=>"16px"), new_room_path(:id => @room.id, :group_id => child_group_first, :add_group => true), :remote => true %>
                    <%= link_to child_group_first.group_name, new_room_path(:id => @room.id, :group_id => child_group_first, :add_group => true), :remote => true %>
                    <%= link_to image_tag("/system/icons/Plus.png", :height => 16, :width => 16), new_room_path(:id => @room.id, :group_id => child_group_first, :add_group => true), :remote => true %>
                 </p>
              </div>

              <% if !child_group_first.users.empty? %>
                 <% child_group_first.users.each do |user| %>
                   <div style="padding-left:20px">
                      <p>
                         <%= link_to image_tag(user.avatar.url, :width=>"16px", :height=>"16px"), new_room_path(:id => @room.id, :user_id => user, :add_user => true), :remote => true %>
                         <%= link_to user.email, new_room_path(:id => @room.id, :user_id => user, :add_user => true), :remote => true %>
                         <%= link_to image_tag("/system/icons/Plus.png", :height => 16, :width => 16), new_room_path(:id => @room.id, :user_id => user, :add_user => true), :remote => true %>
                      </p>
                   </div>
                 <% end %>
              <% end %>

                <% if !Group.where(:parent_id => child_group_first.id).empty? %>
                   <% Group.where(:parent_id => child_group_first.id).each do |child_group_second| %>
                     <div style="padding-left:20px">
                        <p>
                           <%= link_to image_tag("/system/icons/Group.png", :width=>"16px", :height=>"16px"), new_room_path(:id => @room.id, :group_id => child_group_second, :add_group => true), :remote => true %>
                           <%= link_to child_group_second.group_name, new_room_path(:id => @room.id, :group_id => child_group_second, :add_group => true), :remote => true %>
                           <%= link_to image_tag("/system/icons/Plus.png", :height => 16, :width => 16), new_room_path(:id => @room.id, :group_id => child_group_second, :add_group => true), :remote => true %>
                        </p>
                     </div>

                     <% if !child_group_second.users.empty? %>
                        <% child_group_second.users.each do |user| %>
                          <div style="padding-left:30px">
                             <p>
                                <%= link_to image_tag(user.avatar.url, :width=>"16px", :height=>"16px"), new_room_path(:id => @room.id, :user_id => user, :add_user => true), :remote => true %>
                                <%= link_to user.email, new_room_path(:id => @room.id, :user_id => user, :add_user => true), :remote => true %>
                                <%= link_to image_tag("/system/icons/Plus.png", :height => 16, :width => 16), new_room_path(:id => @room.id, :user_id => user, :add_user => true), :remote => true %>
                             </p>
                          </div>
                        <% end %>
                     <% end %>
                   <% end %>
                <% end %>
           <% end %>
        <% end %>
   <% end %>
<% end %>
